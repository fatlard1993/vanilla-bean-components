{
	"name": "vanilla-bean-components",
	"version": "0.0.31",
	"type": "module",
	"exports": {
		"./theme/*": "./theme/*.js",
		"./utils/*": "./utils/*.js",
		"./package.json": "./package.json",
		"./.eslint.cjs": "./.eslint.cjs",
		"./.prettierrc.cjs": "./.prettierrc.cjs",
		"./.spellcheck.cjs": "./.spellcheck.cjs",
		".": "./index.js"
	},
	"files": [
		"/components/**/*",
		"/theme/**/*",
		"/utils/**/*",
		"index.js",
		".eslint.cjs",
		".prettierrc.cjs",
		".spellcheck.cjs",
		"!/components/**/demo.js",
		"!/components/**/*.test.js",
		"!/utils/**/*.test.js"
	],
	"description": "JS class-based components",
	"author": "justfatlard",
	"license": "ISC",
	"engines": {
		"node": ">=16.0.0"
	},
	"browserslist": [
		"last 1 version",
		"> 1%",
		"not dead"
	],
	"scripts": {
		"start": "npm run dev",
		"dev": "vite",
		"lint": "eslint --ext .js .",
		"lint:fix": "eslint --fix --ext .js .",
		"pretty": "prettier .",
		"pretty:fix": "prettier --write .",
		"fix": "npm run lint:fix ; npm run pretty:fix",
		"test": "npm run lint && vitest run",
		"test:fix": "npm run fix && vitest run",
		"test:force": "vitest run",
		"test:dev": "vitest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fatlard1993/vanilla-bean-components.git"
	},
	"bugs": {
		"url": "https://github.com/fatlard1993/vanilla-bean-components/issues"
	},
	"homepage": "https://github.com/fatlard1993/vanilla-bean-components#readme",
	"dependencies": {
		"@ctrl/tinycolor": "^3.6.0",
		"@fortawesome/fontawesome-free": "^6.4.0",
		"@jspm/core": "github:jspm/core",
		"@lezer/highlight": "^1.1.6",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.25",
		"postcss-nested": "^6.0.1",
		"prismjs": "^1.29.0",
		"process": "^0.11.10",
		"source-code-pro": "^2.38.0",
		"source-map-js": "^1.0.2"
	},
	"devDependencies": {
		"@testing-library/dom": "^9.3.1",
		"@vitejs/plugin-legacy": "^4.1.0",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-compat": "^4.1.4",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-spellcheck": "0.0.20",
		"eslint-plugin-testing-library": "^5.11.0",
		"eslint-plugin-unicorn": "^47.0.0",
		"eslint-plugin-vitest": "0.2.6",
		"eslint-plugin-vitest-globals": "^1.4.0",
		"eslint-plugin-write-good-comments": "^0.2.0",
		"jsdom": "^22.1.0",
		"prettier": "3.0.0",
		"vite": "^4.4.3",
		"vitest": "^0.33.0"
	}
}
